{{#if isEditing}}
    {{partial 'post/edit'}}
    <button {{action 'doneEditing'}}>Done</button>
{{else}}
    <button {{action 'edit'}}>Edit</button>
{{/if}}

<h1>{{title}}</h1>
<h3>by {{author}} <small class="muted">({{date publishedAt}})</small></h3>

<hr>

<div class="intro">
    {{markdown intro}}
</div>

<div class="below-the-fold">
    {{markdown extended}}
</div>